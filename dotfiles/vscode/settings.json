{
  // general
  "window.zoomLevel": 0.25,
  "editor.cursorBlinking": "expand",

  // editor
  "editor.fontSize": 15,
  "editor.lineHeight": 2.1,
  "editor.formatOnPaste": false,
  "editor.suggestSelection": "first",
  "editor.rulers": [100],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.wordWrap": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.renderWhitespace": "all",
  "editor.bracketPairColorization.enabled": true,
  "editor.dragAndDrop": false,
  "editor.formatOnSave": true,
  "editor.tokenColorCustomizations": {
    "[Material Theme]": {
      "comments": "#229977"
    }
  },
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.fixAll.eslint": "always"
  },

  // explorador
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "explorer.excludeGitIgnore": false,
  "explorer.decorations.badges": false,
  "explorer.compactFolders": false,

  // busqueda
  "search.useGlobalIgnoreFiles": false,
  "search.useIgnoreFiles": false,

  //archivos
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",

  // workbench
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.colorTheme": "Material Theme",
  "workbench.colorCustomizations": {
    "[Material Theme]": {
      "editorLineNumber.foreground": "#c9c2c2",
      "activityBarBadge.background": "#80CBC4",
      "activityBar.activeBorder": "#80CBC4",
      "list.activeSelectionForeground": "#80CBC4",
      "list.inactiveSelectionForeground": "#80CBC4",
      "list.highlightForeground": "#cb8095",
      "scrollbarSlider.activeBackground": "#80CBC450",
      "editorSuggestWidget.highlightForeground": "#80CBC4",
      "textLink.foreground": "#80CBC4",
      "progressBar.background": "#80CBC4",
      "pickerGroup.foreground": "#80CBC4",
      "tab.activeBorder": "#80CBC4",
      "notificationLink.foreground": "#80CBC4",
      "editorWidget.resizeBorder": "#80CBC4",
      "editorWidget.border": "#80CBC4",
      "settings.modifiedItemIndicator": "#80CBC4",
      "settings.headerForeground": "#80CBC4",
      "panelTitle.activeBorder": "#80CBC4",
      "breadcrumb.activeSelectionForeground": "#80CBC4",
      "menu.selectionForeground": "#80CBC4",
      "menubar.selectionForeground": "#80CBC4",
      "editor.findMatchBorder": "#80CBC4",
      "selection.background": "#80CBC440",
      "statusBarItem.remoteBackground": "#80CBC4"
    }
  },
  "workbench.preferredDarkColorTheme": "Monokai Dimmed",
  "workbench.list.smoothScrolling": true,
  "workbench.list.horizontalScrolling": true,
  "workbench.tree.indent": 20,
  "workbench.editor.tabSizing": "shrink",
  "breadcrumbs.symbolPath": "off",

  // terminal
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "Fire Code",
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorWidth": 2,

  // otros

  // json
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // lenguajes

  // javascript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // typescript
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  // theme
  "materialTheme.accent": "Teal",

  // extensiones

  // extension focus
  "focus.opacity": "0.7",
  "focus.highlightRange": "block",

  // extension inteliphense
  "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,

  // extension esLint
  "eslint.LintTask": false,
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "activitusbar.toggleSidebar": false,
  "activitusbar.views": [
    {
      "name": "explorer",
      "codicon": "explorer-view-icon"
    },
    {
      "name": "search",
      "codicon": "search-view-icon"
    },
    {
      "name": "scm",
      "codicon": "source-control-view-icon"
    },
    {
      "name": "debug",
      "codicon": "run-view-icon"
    },
    {
      "name": "extensions",
      "codicon": "extensions-view-icon"
    },
    {
      "name": "tabsTreeView",
      "codicon": "layers"
    },
    {
      "name": "settings",
      "codicon": "gear"
    }
  ],
  "eslint.format.enable": true

  // cambios de vscode
}
